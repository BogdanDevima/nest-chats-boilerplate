APP_NAME=nest-boilerplate
PORT=3001
FRONTEND_HOST_URL=http://localhost:3000

ENABLE_SWAGGER=true

# Database connection
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=root
DATABASE_DATABASE=nest-boilerplate

# JWT-token config
# JWT_SECRET can be any random string when running a dev mode
JWT_SECRET=Secret
AUTH_TOKEN_EXPIRATION=1d
JWT_REFRESH_SECRET=RefreshSecret
REFRESH_TOKEN_EXPIRATION=30d

# Mailhog settings
# Leave it empty to use production email service
MAILHOG_HOST=localhost
MAILHOG_PORT=1025

# File path of the JSON file that contains your Google service account key 
GOOGLE_APPLICATION_CREDENTIALS=service-account-file.json